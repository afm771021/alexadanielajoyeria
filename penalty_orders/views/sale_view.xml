<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_sale_penalty_order" model="ir.ui.view">
        <field name="name">sale.order.form.sale_penalty_orders</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="is_penalty_order" invisible="1"/>
                <button name="action_penalty_order" type="object" string="PENALTY ORDER" icon="fa-percent" class="btn btn-danger" attrs="{'invisible': ['|', ('is_penalty_order', '=', False), ('state', 'in', ['sale', 'done', 'cancel'])]}">
                </button>
            </xpath>
        </field>
    </record>
</odoo>